FROM apache/php
RUN apt update && apt install -yq --no-install-recommends \
    phpmyadmin 

COPY ./entrypoint.sh /root
RUN chmod +x /root/entrypoint.sh
RUN dos2unix /root/entrypoint.sh

EXPOSE 80

ENTRYPOINT [ "/root/entrypoint.sh" ]

# Install phpMyAdmin
WORKDIR /root

COPY phpmyadmin.sh /root
RUN chmod +x /root/phpmyadmin.sh
RUN /root/phpmyadmin.sh

RUN sed -i "s/$dbuser=\'usuario\'/$dbuser=\'root\'/g" /etc/phpmyadmin/config-db.php
RUN sed -i "s/$dbserver='localhost'/$dbserver='185.166.212.181'/g" /etc/phpmyadmin/config-db.php

CMD apachectl -DFOREGROUND
